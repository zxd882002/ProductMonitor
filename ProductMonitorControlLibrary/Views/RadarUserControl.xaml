<UserControl x:Class="ProductMonitorControlLibrary.Views.RadarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ProductMonitorControlLibrary.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas x:Name="MainCanvas">
        <Polygon x:Name="P1" Points="10,10 20,10 20,20 10,20" Stroke="#22ffffff" StrokeThickness="1" />
        <Polygon x:Name="P2" Points="10,10 20,10 20,20 10,20" Stroke="#22ffffff" StrokeThickness="1" />
        <Polygon x:Name="P3" Points="10,10 20,10 20,20 10,20" Stroke="#22ffffff" StrokeThickness="1" />
        <Polygon x:Name="P4" Points="10,10 20,10 20,20 10,20" Stroke="#22ffffff" StrokeThickness="1" />
        <Polygon x:Name="P5" Points="10,10 20,10 20,20 10,20" Stroke="Orange" StrokeThickness="1"  Fill="#550091f0"/>
    </Canvas>
</UserControl>