<UserControl x:Class="ProductMonitorControlLibrary.Views.ProductivityUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ProductMonitorControlLibrary.Views"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:vm="clr-namespace:ProductMonitorControlLibrary.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:ProductivityUserControlViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <lvc:CartesianChart>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Labels="{Binding XLabels}">
                    <lvc:Axis.Separator>
                        <lvc:Separator StrokeThickness="0" Step="{Binding XStep}" />
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.Series>
                <lvc:ColumnSeries Values="{Binding ProductCount}" Title="生产计数" MaxColumnWidth="10">
                    <lvc:ColumnSeries.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#ff3fbbe6" Offset="0" />
                            <GradientStop Color="#ff2bedf1" Offset="1" />
                        </LinearGradientBrush>
                    </lvc:ColumnSeries.Fill>
                </lvc:ColumnSeries>
                <lvc:ColumnSeries Values="{Binding BadCount}" Title="不良计数" MaxColumnWidth="10">
                    <lvc:ColumnSeries.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#fffb9a9a" Offset="0" />
                            <GradientStop Color="#ffff5151" Offset="1" />
                        </LinearGradientBrush>
                    </lvc:ColumnSeries.Fill>
                </lvc:ColumnSeries>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis MinValue="{Binding MinYValue}" MaxValue="{Binding MaxYValue}">
                    <lvc:Axis.Separator>
                        <lvc:Separator Stroke="#11ffffff" Step="{Binding YStep}" />
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Orientation="Horizontal" Margin="0 -15 0 0 ">
            <Border Height="6" Width="6" Background="#ff2bedf1" Margin="5 0" />
            <TextBlock Text="生产计数" FontSize="10" Foreground="#44ffffff" />
            <Border Height="6" Width="6" Background="#ffff5151" Margin="5 0" />
            <TextBlock Text="不良计数" FontSize="10" Foreground="#44ffffff" />
        </StackPanel>
    </Grid>
</UserControl>