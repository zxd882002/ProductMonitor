<UserControl x:Class="ProductMonitorControlLibrary.Views.QualityUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ProductMonitorControlLibrary.Views"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:vm="clr-namespace:ProductMonitorControlLibrary.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:QualityUserControlViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <lvc:CartesianChart>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Labels="{Binding XLabels}">
                    <lvc:Axis.Separator>
                        <lvc:Separator StrokeThickness="0" Step="{Binding XStep}" />
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{Binding Quantity}" PointGeometrySize="0" Stroke="#ff2bedf1">
                    <lvc:LineSeries.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#552bedf1" Offset="0" />
                            <GradientStop Color="Transparent" Offset="1" />
                        </LinearGradientBrush>
                    </lvc:LineSeries.Fill>
                </lvc:LineSeries>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis MinValue="{Binding MinYValue}" MaxValue="{Binding MaxYValue}">
                    <lvc:Axis.Separator>
                        <lvc:Separator Stroke="#11ffffff" Step="{Binding YStep}" />
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
</UserControl>