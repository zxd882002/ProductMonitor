<UserControl x:Class="ProductMonitor.Login.LoginUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ProductMonitor.Login"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             Height="450" Width="800"
             d:DataContext="{d:DesignInstance Type=local:LoginUserControlViewModel, IsDesignTimeCreatable=True}">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" Source="/Resources/Images/Login.jpg" Margin="20" />

        <md:Transitioner Grid.Column="1" SelectedIndex="{Binding SelectedIndex, FallbackValue=0}">
            <!-- login -->
            <md:TransitionerSlide>
                <DockPanel Margin="15" VerticalAlignment="Center">
                    <TextBlock Text="欢迎使用" FontWeight="Bold" FontSize="22" Margin="0 10" DockPanel.Dock="Top" />
                    <TextBox md:HintAssist.Hint="请输入账号" Margin="0 10" DockPanel.Dock="Top" />
                    <PasswordBox md:HintAssist.Hint="请输入密码" Margin="0 10" DockPanel.Dock="Top" />
                    <Button Content="登录系统" Command="{Binding LoginCommand}" Margin="0 10" DockPanel.Dock="Top" />
                    <DockPanel Margin="0 5" LastChildFill="False">
                        <TextBlock Text="注册账号">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding NavigateRegisterCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBlock>
                        <TextBlock Text="忘记密码" DockPanel.Dock="Right">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding NavigateForgetPasswordCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBlock>
                    </DockPanel>
                </DockPanel>
            </md:TransitionerSlide>

            <!-- register -->
            <md:TransitionerSlide>
                <DockPanel Margin="15" VerticalAlignment="Center">
                    <TextBlock Text="注册账号" FontWeight="Bold" FontSize="22" Margin="0 10" DockPanel.Dock="Top" />
                    <TextBox md:HintAssist.Hint="请输入账号" Margin="0 10" DockPanel.Dock="Top" />
                    <PasswordBox md:HintAssist.Hint="请输入密码" Margin="0 10" DockPanel.Dock="Top" />
                    <PasswordBox md:HintAssist.Hint="请确认密码" Margin="0 10" DockPanel.Dock="Top" />
                    <Button Content="注册账号" Command="{Binding RegisterCommand}" Margin="0 10" DockPanel.Dock="Top" />
                    <Button Content="返回登录" Command="{Binding NavigateLoginCommand}" Margin="0 10" DockPanel.Dock="Top"
                            Style="{StaticResource MaterialDesignOutlinedButton}" />
                </DockPanel>
            </md:TransitionerSlide>
        </md:Transitioner>
    </Grid>
</UserControl>